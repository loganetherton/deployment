{
  "apps" : [
    {
      "name": "dry",
      "script": "server.js",
      "watch": true,
      "env_production": {
        "NODE_ENV": "production"
      },
      "env_production_code_update": {
        "NODE_ENV": "production"
      }
    }
  ],

  "deploy": {
    "production": {
      "user": "ubuntu",
      "host": "ec2-54-174-235-177.compute-1.amazonaws.com",
      "ref": "origin/develop",
      "repo": "git@github.com:loganetherton/ac.git",
      "path": "/dry",
      "watch": true,
      "env": {
        "NODE_ENV": "production"
      },
      "post-deploy": "pm2 startOrRestart ecosystem.json -i 1 --env production && npm install && bower install && NODE_ENV=production grunt"
    },
    "production_code_update": {
      "user": "ubuntu",
      "host": "ec2-54-174-235-177.compute-1.amazonaws.com",
      "ref": "origin/develop",
      "repo": "git@github.com:loganetherton/ac.git",
      "path": "/dry",
      "env": {
        "NODE_ENV": "production"
      },
      "post-deploy": "pm2 startOrRestart ecosystem.json --env production_code_update"
    },
    "dev": {
      "user": "node",
      "host": "ec2-54-174-235-177.compute-1.amazonaws.com",
      "ref": "origin/develop",
      "repo": "git@github.com:loganetherton/ac.git",
      "path": "/dry",
      "post-deploy": "pm2 startOrRestart ecosystem.json --env production && npm install && bower install && grunt",
      "env": {
        "NODE_ENV": "dev"
      }
    }
  }
}
